<div class="users-registrations-new">
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="card-style">
    <h1 class="title"><%= t('.title') %></h1>
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f|%>
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class:"text-field"%>
      </div>
      <div class="form-group">
        <%= f.label :email %><br>
        <%= f.email_field :email, class:"text-field" %>
      </div>
      <div class="form-group">
        <%= f.label :password %><br>
        <%= f.password_field :password, class:"text-field" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, class:"text-field" %>
      </div>
      <div class="submit">
        <%= f.submit t('.submit'), class:"submit-botton" %>
      </div>
    <% end %>
    <div class="link">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>