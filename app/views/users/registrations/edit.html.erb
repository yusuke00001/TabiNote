<div class="user-registration-edit">
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="card-style">
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|%>
      <h1 class="title"><i class="fa-solid fa-user-pen user-edit-icon icon"></i><%= t('.title') %></h1>
      <div class="form-group">
        <%= f.label :name , class:"form-label" %>
        <%= f.text_field :name, class:"text-field" %>
      </div>
      <div class="form-group">
        <%= f.label :email, class:"form-label" %>
        <%= f.email_field :email, class:"text-field" %>
      </div>
      <div class="form-group">
        <%= f.label :password, class:"form-label" %><br>
        <% if @minimum_password_length %>
          <i class="password-restriction">â€»<%= @minimum_password_length %><%= t('.password-restriction') %></i>
        <% end %>
        <%= f.password_field :password, class:"text-field" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class:"form-label" %>
        <%= f.password_field :password_confirmation, class:"text-field" %>
      </div>
      <div class="form-group">
        <%= f.label :current_password, class:"form-label" %>
        <%= f.password_field :current_password, class:"text-field" %>
      </div>
      <div class="form-group">
        <%= f.label :avatar, class:"form-label" %>
        <%= f.file_field :avatar, class:"text-field", onchange: "loadImage(this);" %>
      </div>
      <div id="post_avatar">
        <p id="preview"></p>
      </div>
      <div class="submit-mypage">
        <div class="submit">
          <%= f.submit t('.submit') , class:"submit-button" %>
        </div>
        <div class="mypage-link">
          <%= link_to t('.back'), :back %>
        </div>
      </div>
    <% end %>
  </div>
</div>